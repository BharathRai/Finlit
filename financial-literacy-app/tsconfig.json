{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // Use new JSX transform

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Additions for JS Interop */
    "allowJs": true,         // Allow importing .js/.jsx files
    "checkJs": false         // Don't type-check JS files by default
  },
  "include": ["src", "vite.config.ts"], // Include vite config if needed here
  "references": [{ "path": "./tsconfig.node.json" }]
}